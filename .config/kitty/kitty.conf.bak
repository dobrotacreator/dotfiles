font_size    20.0
font_family  family="RobotoMono Nerd Font" style="Medium"

window_border_width   1pt
active_border_color   #FFD702
draw_minimal_borders  no

enabled_layouts Tall, *

macos_option_as_alt                 yes
macos_quit_when_last_window_closed  no

tab_bar_style        powerline
tab_powerline_style  slanted

cursor                 none
cursor_shape           block
cursor_blink_interval  0
shell_integration      no-cursor

enable_audio_bell no


map cmd+h neighboring_window left
map cmd+l neighboring_window right
map cmd+j neighboring_window down
map cmd+k neighboring_window up
map cmd+s launch --cwd=current
map cmd+t launch --cwd=current --type=tab
map cmd+1 goto_tab 1
map cmd+2 goto_tab 2
map cmd+3 goto_tab 3
map cmd+4 goto_tab 4
map cmd+5 goto_tab 5
map cmd+6 goto_tab 6
map cmd+7 goto_tab 7
map cmd+8 goto_tab 8
map cmd+9 goto_tab 9
